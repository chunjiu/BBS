<%-include('../includes/header')%>
  <div class="row">
    <%-include('../includes/treeNav')%>
      <div class='col-md-8'>
        <div class="panel noborder topcinav" style="border-style:none">
          <div class="panel-heading">
            <ul class="nav nav-pills">
              <% [['全部'],['精华']].concat(tabs).forEach(function(value){%>
                <li>
                  <a class="tabURL" href="/case?tab=<%=value%>" carModelURL=<%=carModelURL%>>
                    <%=value%>
                  </a>
                  <li>
              <%})%>
              <li class="URLclear" ><a href="#"><img title='清空车型选项' style='width:20px;height:20px;' src='/images/clear.png'></a></li>
            </ul>
          </div>
          <div style="background-color:white">
            <div class="list-group">
              <%if(topic.length){%>
                <%topic.forEach(function(topic){%>
                  <a class="list-group-item" style="height:60px;line-height:40px;" href="/<%=topic.id%>/tid">
                    <span><img src="<%=topic.topic_avatars?topic.topic_avatars:'/images/123.jpg'%>" style="height:30px;width:30px;border-radius:25%"></span>
                    <span title="回复数"><%=topic.reply_count%></span>/<span title="点击数"><%=topic.visit_count%></span>
                    <%if(topic.top){%>
                      <span class="TopicGood">置项</span><!--置顶贴优先，因为置顶贴也是精华贴-->
                    <%}else if(topic.good){%>
                      <span class="TopicGood">精华</span>
                    <%}else{%>
                      <span class="TopicTab"><%=topic.tab%></span>
                    <%}%>
                    <span><%=topic.title%></span>
                    <%if(!topic.reply_count){%>
                      <span class="pull-right time_ago"><%=topic.create_at_ago()%><span>
                    <%}else{%>
                      <span class="pull-right time_ago">
                        <span><img src="<%=topic.last_reply_user_avatars?topic.last_reply_user_avatars:'/images/123.jpg'%>" class="img_avatars"></span>
                        <span><%=topic.last_reply_at_ago()%><span> 
                      </span>                  
                    <%}%>
                </a>
                  <% })%>
                    <!--分页-->
                    <nav>
                      <ul class="pagination" cureent_page=<%=current_page%>>
                        <% var base_url = '/case?'+'tab='+(typeof(tab)!== 'undefined'?tab:'')+'&page='%>
                          <% if(current_page == 1){%>
                            <li class='disabled'><a href="<%=base_url%>1"><span>&laquo;</span></a></li>
                            <%}else{%>
                              <li><a href="<%=base_url%>1"><span>&laquo;</span></a></li>
                              <%}%>
                                <% var star_page = current_page - 2 > 0 ? current_page - 2: 1;
                         var end_page =  star_page + 3 >= pages ? pages:star_page+3;
                       %>
                                  <% for(var i=star_page;i<=end_page;i++){%>
                                    <li>
                                      <a class="page" href="<%=base_url%><%=i%>">
                                        <%=i%>
                                      </a>
                                    </li>
                                    <%}%>
                                      <%if(current_page==pages){%>
                                        <li class="disabled"><a href="<%=base_url%><%=pages%>"><span>&raquo;</span></a></li>
                                        <%}else{%>
                                          <li><a href="<%=base_url%><%=pages%>"><span>&raquo;</span></a></li>
                                          <%}%>
                                            <li class="li_hidden"><a class="pageJump" url=<%=base_url%>><button id="pp"></button></a>
                                              <!--button标签需在a标签里面，可用于a标签的自动触发事件-->
                                              <li>
                                                <li>
                                                  <div class="input-group page_li">
                                                    <span class="input-group-addon">转到</span>
                                                    <select class="form-control">
                            <option><%=current_page%>页</option>
                              <% for(var i=1;i<=pages;i++){%>
                            <option><%=i%>页</option>
                              <% }%>
                          </select>
                                                  </div>
                                                </li>
                      </ul>
                    </nav>
                    <%}else{%>
                      <div class="inner">
                        <p>无话题</p>
                      </div>
                      <%}%>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-2" style="padding-left:18px;">
        <%if(current_user){%>
          <div class="panel panel-default panelBorderNone">
            <div style="background-color:#EBE6E6" class="panel-heading">个人信息</div>
            <%-include('../includes/sidebar')%>
          </div>

          <div style="margin-bottom:15px;">
            <a href="/create">
            <span class="btn btn-success">发布话题</span>
          </a>
          </div>
          <%}else{%>
            <%-include('../includes/sidebar2')%>
              <%}%>
      </div>
  </div>
  <!--row-->
  <%-include('../includes/end')%>
    <script>
      $(document).ready(function () {

        //跳转页数
        var carModelURL = $('.tabURL').attr('carModelURL');//汽车品牌条件选择变量

        var $nav = $('.pagination');
        var current_page = $nav.attr('cureent_page');
        $nav.find('li').each(function () {
          var $li = $(this);
          var $a = $li.find('a');
          if ($a.html() == current_page) {
            $li.addClass('active');
            $a.removeAttr('href');
          }
        });

        $('select').change(function () {
          var page = $(this).val();
          var url = $('.pageJump').attr('url');
          if(carModelURL){
            $('.pageJump').attr('href', url + page+'&carModel='+carModelURL);
          }else{
            $('.pageJump').attr('href', url + page)
          }
          $('#pp').trigger('click');//自动触发a标签的点击事件，并跳转到href地址,注意需要buttom标签在a标签里面
        });

        //导航多条件选择
        
        $('.tabURL').click(function(){
          $this = $(this);  
          var url = $this.attr('href');
          if(carModelURL){
            url= url+'&carModel='+carModelURL;
            $this.attr('href',url);
          }else{
            next();
          }
        })
        $('.URLclear').click(function(){
          carModelURL = '';//清空汽车选择条件
        })

        //汽车品牌侧边导航
        $('.tree').scroll(function () {
          var tree = $('.tree').offset().top;
          var navScrollLeft = $('.navscroll').offset().left;
          $('.navscroll').offset({ top: tree, left: navScrollLeft });
          
        })
        $(".carBrand,.treeFisrtWord").click(function(){
          var $this =$(this);
          var carModel = $this.next();
          carModel.toggle();
        });

       /* $('.tree').click(function () {
          var myScroll = $('#myScrollspy').offset().top;
          var navScroll = $('.navscroll').offset().top;
          var tree = $('.tree').offset().top;
          $('.test').text(tree);
          $('.test2').text(myScroll);
          $('.test3').text(navScroll);
        })*/

       /* $('.treeFisrtWord').click(function(){
          var $this = $(this);
          var car = $this.next();
          car.toggle();
        })*/

        

        $(window).scroll(function(){

          var windowWidth = $(window).height();

          if(windowWidth>700){//当屏幕大于700时
            var scrollTop = $(window).scrollTop();
            var head = $('.head');
            var nav = $('.navbar')

            var headHeight = head.height();
            var navHeight = nav.height();

            if(scrollTop>130){
                $('.tree').offset({top:scrollTop})
            }else{
              $('.tree').offset({top:headHeight+navHeight+2})
            }
          }
        })
      })
    </script>