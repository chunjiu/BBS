<%-include('../header')%>
  <%if(errors !=''){%>
    <div class="alert alert-warning alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong><%=errors%></strong>
    </div>
    <%}%>

      <div class="row">
        <div class="col-md-8">
          <div class="panel panel-default">
            <div class="header">
              <ol class="breadcrumb">
                <li><a href="/">主页</a></li>
                <li class="active">登录</li>
              </ol>
            </div>
            <div class="panel-body">
              <form class="form-horizontal" id="singnForm" action="/login" method="post">
                <div class="form-group">
                  <label for="inputusername" class="col-sm-4 control-label">用户名</label>
                  <div class="col-sm-5">
                    <input type="text" class="form-control" id="inputusername" name='inputusername' placeholder="用户名">
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputpassword" class="col-sm-4 control-label">密码</label>
                  <div class="col-sm-5">
                    <input type="password" class="form-control" id="inputpassword" name='inputpassword' placeholder="密码">
                    <!--记住要有name属性，服务器通过req.body.name来获取值-->
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-4 col-sm-9">
                    <button type="submit" class="btn btn-primary">登录</button>
                    <a href="/auth/githup" class="a1"><span  class="btn btn-default">通过GitHup登录</span></a>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <%-include('../sign/sidebar') %>
        </div>
      </div>
      <%-include('../footer')%>